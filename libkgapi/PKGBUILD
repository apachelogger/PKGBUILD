# $Id$
# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=libkgapi
pkgver=2.1.0
pkgrel=1
pkgdesc="A KDE-based library for accessing various Google services via their public API"
url='https://projects.kde.org/projects/extragear/libs/libkgapi'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kdepimlibs')
makedepends=('cmake' 'automoc4' 'boost' 'git')
replaces=('akonadi-google' 'libkgoogle')
conflicts=('akonadi-google' 'libkgoogle')
source=("git://anongit.kde.org/libkgapi#branch=LibKGAPI/2.1")
md5sums=('SKIP')

pkgver() {
cd "$srcdir/libkgapi"
printf "2.1.0+git`date +%Y%m%d`.%s"  "$(git rev-parse --short HEAD)"
}


prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE4_BUILD_TESTS=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
